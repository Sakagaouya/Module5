@model TPModule5_2_BO.Pizza

<h2>Suppression</h2>

<h3>Etes vous sûr de vouloir supprimer cet élément ?</h3>
<div>
    <h4>Pizza</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nom)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nom)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Ingredients)
        </dt>

        <dd>
            @if (Model.Ingredients != null)
            {
                foreach (var ingredient in Model.Ingredients)
                {
                    @Html.DisplayFor(m => ingredient.Nom)<br />
                }
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Pate)
        </dt>

        <dd>
            @if (Model.Pate != null)
            {
                @Html.DisplayFor(model => model.Pate.Nom)
            }
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Supprimer" class="btn btn-default" /> |
            @Html.ActionLink("Retour à la liste", "Index")
        </div>
    }
</div>
